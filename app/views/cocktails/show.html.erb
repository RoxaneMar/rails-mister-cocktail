<p id="notice"><%= notice %></p>

<div class='cocktail_show'>
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <p>
        <strong>Name:</strong>
        <%= @cocktail.name %>
      </p>

      <p>
        <strong>Ingredients:</strong>
        <% @doses.each do |dose| %>
          <ul>
            <li><%= "The #{dose.cocktail.name} cocktail needs #{dose.description} of #{dose.ingredient.name} " %>
              <%= link_to 'Delete ingredient', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
            </li>
          </ul>
        <% end %>
      </p>


      <%= link_to 'Add new ingredient', new_cocktail_dose_path(@cocktail) %> |
      <%= link_to 'Edit Cocktail Name', edit_cocktail_path(@cocktail) %> |
      <%= link_to 'Back', cocktails_path %>
    </div>
    <div class="col-xs-12 col-sm-6">
      <% if @cocktail.photo? %>
        <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
      <% end %>
    </div>
  </div>
</div>
