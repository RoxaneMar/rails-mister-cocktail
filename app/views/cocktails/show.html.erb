<p id="notice"><%= notice %></p>

<div class='cocktail_show'>
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <h1><%= @cocktail.name %></h1>


      <br>
      <hr>
      <br>


      <h3>Ingredients:</h3>
      <br>
      <p>
        <% @doses.each do |dose| %>
          <ul>
            <li><i class='fa fa-glass'></i><%= " The #{dose.cocktail.name} cocktail needs #{dose.description} of #{dose.ingredient.name} " %>
              <%= link_to 'Delete ingredient', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
            </li>
          </ul>
        <% end %>
      </p>


      <%= link_to 'Add new ingredient', new_cocktail_dose_path(@cocktail) %> |
      <%= link_to 'Edit Cocktail', edit_cocktail_path(@cocktail) %>
     <!--  <%= link_to 'Back', cocktails_path %> -->
    </div>
    <div class="col-xs-12 col-sm-6">
      <% if @cocktail.photo? %>
        <div class="cocktail-card" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)), url('<%= cl_image_path @cocktail.photo.path, height: 300, width: 400, crop: :fill %>');">
        </div>
      <% end %>
    </div>
  </div>
</div>
